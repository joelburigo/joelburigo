---
import { Icon as AstroIcon } from 'astro-icon/components'

interface Props {
  name: string
  class?: string
  size?: number
}

const { name, class: className = '', size } = Astro.props

// Mapeia nomes para os Ã­cones do Lucide
const iconName = `lucide:${name}`

// Define width e height baseado no size se fornecido
const sizeProps = size ? { width: size, height: size } : {}
---

<AstroIcon name={iconName} class={className} {...sizeProps} />
