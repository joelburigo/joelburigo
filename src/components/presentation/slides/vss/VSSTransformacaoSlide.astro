---
import Container from '../../../ui/Container.astro'
import { Icon } from 'astro-icon/components'
---

<div class="h-screen bg-dark py-8 flex items-center overflow-y-auto">
  <Container>
    <div class="max-w-6xl mx-auto">
      
      <div class="text-center mb-10">
        <h2 class="font-display text-4xl md:text-5xl font-bold text-white mb-4">
          Antes vs Depois do <span class="text-lime">VSS</span>
        </h2>
        <p class="text-xl text-gray-400 max-w-3xl mx-auto">
          A transformação que você vai experimentar
        </p>
      </div>

      <!-- Before vs After -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        
        <!-- Antes -->
        <div class="rounded-2xl border-2 border-red-500/30 bg-red-500/5 p-8">
          <div class="mb-6 flex items-center justify-center gap-3">
            <Icon name="lucide:x-circle" class="h-10 w-10 text-red-400" />
            <h3 class="text-3xl font-bold text-white">Antes</h3>
          </div>
          
          <div class="space-y-4">
            <div class="rounded-lg bg-dark/40 p-4">
              <p class="text-white font-semibold">Vendas aleatórias</p>
            </div>
            <div class="rounded-lg bg-dark/40 p-4">
              <p class="text-white font-semibold">Sem CRM ou planilhas</p>
            </div>
            <div class="rounded-lg bg-dark/40 p-4">
              <p class="text-white font-semibold">Processo na sua cabeça</p>
            </div>
            <div class="rounded-lg bg-dark/40 p-4">
              <p class="text-white font-semibold">Você faz tudo sozinho</p>
            </div>
            <div class="rounded-lg bg-dark/40 p-4">
              <p class="text-white font-semibold">Perda de leads por esquecimento</p>
            </div>
            <div class="rounded-lg bg-dark/40 p-4">
              <p class="text-white font-semibold">Sem métricas claras</p>
            </div>
          </div>
        </div>

        <!-- Depois -->
        <div class="rounded-2xl border-2 border-lime/30 bg-lime/5 p-8">
          <div class="mb-6 flex items-center justify-center gap-3">
            <Icon name="lucide:check-circle" class="h-10 w-10 text-lime" />
            <h3 class="text-3xl font-bold text-white">Depois</h3>
          </div>
          
          <div class="space-y-4">
            <div class="rounded-lg bg-dark/40 p-4 border-l-4 border-lime">
              <p class="text-white font-semibold">Previsibilidade mensal</p>
            </div>
            <div class="rounded-lg bg-dark/40 p-4 border-l-4 border-lime">
              <p class="text-white font-semibold">Sistema integrado profissional</p>
            </div>
            <div class="rounded-lg bg-dark/40 p-4 border-l-4 border-lime">
              <p class="text-white font-semibold">Playbook documentado</p>
            </div>
            <div class="rounded-lg bg-dark/40 p-4 border-l-4 border-lime">
              <p class="text-white font-semibold">Equipe executando processos</p>
            </div>
            <div class="rounded-lg bg-dark/40 p-4 border-l-4 border-lime">
              <p class="text-white font-semibold">Automação 24/7 ativa</p>
            </div>
            <div class="rounded-lg bg-dark/40 p-4 border-l-4 border-lime">
              <p class="text-white font-semibold">Dashboard com KPIs em tempo real</p>
            </div>
          </div>
        </div>

      </div>

    </div>
  </Container>
</div>
