---
// Google Tag Manager - GTM First Strategy
// GA4, Meta Pixel, Google Ads são configurados NO GTM
// SEM Partytown para compatibilidade máxima com todas as tags
const GTM_ID = import.meta.env.PUBLIC_GTM_ID || 'GTM-TWP4J6N8'
---

<!-- Initialize dataLayer (must be inline and before GTM) -->
<script is:inline>
  window.dataLayer = window.dataLayer || [];
</script>

<!-- Google Tag Manager - Professional Lazy Load -->
<script is:inline define:vars={{ GTM_ID }}>
  // Carrega GTM de forma profissional: idle, interação, ou após page load
  function initGTM() {
    if (window.gtmLoaded) return;
    window.gtmLoaded = true;
    
    (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer',GTM_ID);
  }
  
  // Prioriza interação imediata
  const events = ['mousedown', 'touchstart', 'keydown'];
  events.forEach(event => {
    window.addEventListener(event, initGTM, { once: true, passive: true });
  });
  
  // Usa requestIdleCallback para carregamento inteligente
  if ('requestIdleCallback' in window) {
    requestIdleCallback(() => {
      if (document.readyState === 'complete') {
        initGTM();
      } else {
        window.addEventListener('load', initGTM, { once: true });
      }
    }, { timeout: 1000 });
  } else {
    // Fallback: carrega após page load
    if (document.readyState === 'complete') {
      setTimeout(initGTM, 0);
    } else {
      window.addEventListener('load', () => setTimeout(initGTM, 0), { once: true });
    }
  }
</script>
<!-- End Google Tag Manager -->
