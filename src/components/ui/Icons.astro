---
import { Icon as AstroIcon } from 'astro-icon/components'

interface Props {
  name: string
  class?: string
  size?: number
}

const { name, class: className = '', size } = Astro.props

// Mapeia nomes para os ícones do Lucide
const iconName = `lucide:${name}`

// Define width e height baseado no size se fornecido
const sizeProps = size ? { width: size, height: size } : {}

// Para ícones que devem ser preenchidos (como estrelas de rating)
const shouldBeFilled = className?.includes('fill-')
const iconClass = shouldBeFilled ? `${className} fill-current` : className
---

<AstroIcon name={iconName} class={iconClass} {...sizeProps} />
