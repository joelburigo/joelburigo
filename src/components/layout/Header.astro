---
import Container from '../ui/Container.astro'
import MobileMenu from './MobileMenu.astro'
import Logo from '../ui/Logo.astro'

interface Props {
  transparent?: boolean
}

const { transparent = false } = Astro.props

const navLinks = [
  { name: 'Vendas sem Segredos', path: '/vss' },
  { name: 'Implementação Guiada', path: '/services' },
  { name: 'Conselho Estratégico', path: '/advisory' },
]

const initialClasses = transparent 
  ? 'bg-transparent py-5' 
  : 'bg-dark/98 py-3 shadow-xl shadow-black/20 backdrop-blur-lg'
---

<header id="main-header" class={`fixed left-0 right-0 top-0 z-50 transition-all duration-300 ${initialClasses}`} data-transparent={transparent}>
  <Container>
    <div class="flex items-center justify-between gap-8">
      <!-- Logo (Left) -->
      <a href="/" class="z-50 flex-shrink-0">
        <Logo />
      </a>

      <!-- Desktop Nav + CTA (Right) -->
      <div class="hidden flex-1 items-center justify-end gap-8 md:flex">
        <nav class="flex items-center space-x-8">
          {navLinks.map((link) => (
            <a
              href={link.path}
              class="font-sans text-sm font-medium text-gray-200 transition-colors hover:text-lime"
            >
              {link.name}
            </a>
          ))}
        </nav>

        <!-- CTA Button -->
        <a href="/diagnostico">
          <button class="inline-flex h-9 items-center justify-center rounded-lg bg-lime px-4 font-display text-sm font-bold text-dark shadow-lg shadow-lime/20 transition-all hover:bg-lime/90 focus:outline-none focus:ring-2 focus:ring-lime focus:ring-offset-2">
            Diagnóstico Gratuito
          </button>
        </a>
      </div>
      
      <!-- Mobile Menu Component -->
      <MobileMenu navLinks={navLinks} />
    </div>
  </Container>
</header>

<script>
  // Scroll effect - Header transparente no topo, escuro ao rolar
  function initHeaderScroll() {
    const headerElement = document.getElementById('main-header')
    if (!headerElement) return
    
    const isTransparent = headerElement.dataset.transparent === 'true'
    const header = headerElement // Type narrowing
    
    function handleScroll() {
      if (window.scrollY > 50) {
        header.classList.add('bg-dark/98', 'py-3', 'shadow-xl', 'shadow-black/20', 'backdrop-blur-lg')
        header.classList.remove('bg-transparent', 'py-5')
      } else {
        if (isTransparent) {
          header.classList.remove('bg-dark/98', 'py-3', 'shadow-xl', 'shadow-black/20', 'backdrop-blur-lg')
          header.classList.add('bg-transparent', 'py-5')
        }
        // Se não é transparente, mantém o fundo escuro mesmo no topo
      }
    }

    // Executar na carga
    handleScroll()
    
    // Escutar scroll
    window.addEventListener('scroll', handleScroll, { passive: true })
  }

  // Inicializar
  initHeaderScroll()
  
  // Re-inicializar após navegação (View Transitions)
  document.addEventListener('astro:page-load', initHeaderScroll)
</script>
