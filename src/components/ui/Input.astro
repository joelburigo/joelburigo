---
interface Props {
  type?: 'text' | 'email' | 'tel' | 'number'
  placeholder?: string
  name: string
  id?: string
  required?: boolean
  class?: string
}

const { 
  type = 'text',
  placeholder,
  name,
  id,
  required = false,
  class: className = ''
} = Astro.props
---

<input
  type={type}
  name={name}
  id={id || name}
  placeholder={placeholder}
  required={required}
  class={`w-full px-4 py-3 rounded-lg bg-white dark:bg-white/5 border-2 border-gray-200 dark:border-white/10 text-dark dark:text-white placeholder:text-gray-400 dark:placeholder:text-gray-400 focus:border-lime dark:focus:border-lime focus:outline-none transition-colors ${className}`}
/>
