---
import Container from '../ui/Container.astro'
import Button from '../ui/Button.astro'
import { CheckCircle2, PlayCircle, X, Users, BookOpen, Zap, Target, TrendingUp, Award, Clock, DollarSign } from 'lucide-react'

const oquee = [
  { icon: 'CheckCircle2', title: 'Implementação Prática', desc: '90 dias de trabalho estruturado, não só teoria' },
  { icon: 'Zap', title: 'Sistema Completo', desc: 'CRM + funis + processos funcionando' },
  { icon: 'Target', title: 'Funciona Sem Budget', desc: 'COM ou SEM tráfego pago, você escolhe a rota' },
]

const naoE = [
  'Curso gravado que te abandona',
  'Teoria sem implementação',
  'Solução genérica para qualquer porte',
  'Dependente de budget alto de tráfego',
]

const modulos = [
  { num: '00', nome: 'Diagnóstico Inicial', aulas: 3 },
  { num: '01', nome: 'Framework dos 6Ps', aulas: 4 },
  { num: '02', nome: 'P1: Posicionamento', aulas: 5 },
  { num: '03', nome: 'P2: Público (ICP)', aulas: 4 },
  { num: '04', nome: 'P3: Produto/Oferta', aulas: 5 },
  { num: '05', nome: 'P4: CRM Setup', aulas: 6 },
  { num: '06', nome: 'Funis de Vendas', aulas: 5 },
  { num: '07', nome: 'Automações', aulas: 4 },
  { num: '08', nome: 'Landing Pages', aulas: 4 },
  { num: '09', nome: 'Rota A: Tráfego Pago', aulas: 6 },
  { num: '10', nome: 'Rota B: Prospecção Ativa', aulas: 6 },
  { num: '11', nome: 'P5: Processos', aulas: 4 },
  { num: '12', nome: 'P6: Pessoas', aulas: 3 },
  { num: '13', nome: 'Métricas e KPIs', aulas: 4 },
  { num: '14', nome: 'Otimização Contínua', aulas: 3 },
]

const inclusos = [
  { titulo: 'Conteúdo Educacional', itens: ['15 módulos estruturados', '60 aulas em vídeo (28-32h)', 'Acesso vitalício', 'Atualizações incluídas'] },
  { titulo: 'Mentorias e Suporte', itens: ['48 sessões ao vivo', 'Semanais por 12 semanas', 'Depois quinzenais', 'Todas gravadas'] },
  { titulo: 'Growth CRM (12 meses)', itens: ['CRM profissional completo', 'Valor: R$ 1.188/ano inclusos', 'Já configurado', 'Funis + automações prontos'] },
  { titulo: 'Templates e Recursos', itens: ['Canvas dos 6Ps', 'Scripts de vendas', 'Landing pages', 'SOPs e processos'] },
]

const resultados = [
  { metrica: 'Previsibilidade', antes: 'Não sabe quanto vai faturar', depois: 'Metas claras e alcançáveis' },
  { metrica: 'Leads', antes: 'Planilha Excel ou papel', depois: 'CRM configurado + automações' },
  { metrica: 'Processo', antes: 'Improviso em cada venda', depois: 'Playbook comercial documentado' },
  { metrica: 'Equipe', antes: 'Só o dono sabe vender', depois: 'Time capacitado e autônomo' },
