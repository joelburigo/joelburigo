# Security Headers - PageSpeed 100
/*
  # Content Security Policy (Google Analytics, Ads, Tag Manager)
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.google-analytics.com https://www.googletagmanager.com https://googleads.g.doubleclick.net https://connect.facebook.net https://api.gsh.digital https://stcdn.leadconnectorhq.com https://backend.leadconnectorhq.com https://www.gstatic.com https://www.google.com; script-src-elem 'self' 'unsafe-inline' https://www.google-analytics.com https://www.googletagmanager.com https://googleads.g.doubleclick.net https://connect.facebook.net https://api.gsh.digital https://stcdn.leadconnectorhq.com https://www.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://stcdn.leadconnectorhq.com; font-src 'self' https://fonts.gstatic.com https://stcdn.leadconnectorhq.com; img-src 'self' data: https: blob:; connect-src 'self' https://www.google-analytics.com https://www.googletagmanager.com https://analytics.google.com https://stats.g.doubleclick.net https://googleads.g.doubleclick.net https://www.google.com https://connect.facebook.net https://api.gsh.digital https://backend.leadconnectorhq.com; frame-src https://api.gsh.digital https://www.google.com https://td.doubleclick.net; worker-src 'self' blob:; object-src 'none'; base-uri 'self'; form-action 'self' https://api.gsh.digital;
  
  # HSTS - Force HTTPS
  Strict-Transport-Security: max-age=63072000; includeSubDomains; preload
  
  # COOP - Cross-Origin isolation
  Cross-Origin-Opener-Policy: same-origin-allow-popups
  
  # XFO - Clickjacking protection
  X-Frame-Options: SAMEORIGIN
  
  # Other Security
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=()
  
  # Disable Cloudflare Email Obfuscation (removes email-decode.min.js)
  cf-email-obfuscation: off

