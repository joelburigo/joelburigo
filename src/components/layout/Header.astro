---
import Container from '../ui/Container.astro'
import MobileMenu from './MobileMenu.astro'
import Logo from '../ui/Logo.astro'
import { ChevronDown } from 'lucide-react'

interface Props {
  transparent?: boolean
}

const { transparent = false } = Astro.props

const navLinks = [
  { name: 'VSS', path: '/vss' },
  { name: 'Services', path: '/services' },
  { name: 'Advisory', path: '/advisory' },
  { name: 'Diagnóstico', path: '/diagnostico' },
]

const moreLinks = [
  { name: 'Sobre', path: '/sobre' },
  { name: 'Blog', path: '/blog' },
  { name: 'Contato', path: '/contato' },
]

const allNavLinks = [
  { name: 'Sobre', path: '/sobre' },
  { name: 'VSS', path: '/vss' },
  { name: 'Services', path: '/services' },
  { name: 'Advisory', path: '/advisory' },
  { name: 'Diagnóstico', path: '/diagnostico' },
  { name: 'Blog', path: '/blog' },
  { name: 'Contato', path: '/contato' },
]

const initialClasses = transparent 
  ? 'bg-transparent py-5' 
  : 'bg-dark/98 py-3 shadow-xl shadow-black/20 backdrop-blur-lg'
---

<header id="main-header" class={`fixed left-0 right-0 top-0 z-50 transition-all duration-300 ${initialClasses}`} data-transparent={transparent}>
  <Container>
    <div class="flex items-center justify-between gap-8">
      <!-- Logo (Left) -->
      <a href="/" class="z-50 flex-shrink-0">
        <Logo />
      </a>

      <!-- Desktop Nav + CTA (Right) -->
      <div class="hidden flex-1 items-center justify-end gap-8 md:flex">
        <nav class="flex items-center space-x-8">
          {navLinks.map((link) => (
            <a
              href={link.path}
              class="font-sans text-sm font-medium text-gray-200 transition-colors hover:text-lime"
            >
              {link.name}
            </a>
          ))}
          
          <!-- Dropdown "Mais" -->
          <div class="dropdown-container relative" data-dropdown>
            <button 
              class="dropdown-trigger flex items-center gap-1 font-sans text-sm font-medium text-gray-200 transition-colors hover:text-lime"
              aria-label="Mais opções"
              data-dropdown-trigger
            >
              Mais
              <ChevronDown className="h-4 w-4 transition-transform" data-dropdown-icon />
            </button>
            
            <div 
              class="dropdown-menu invisible absolute right-0 top-full z-50 mt-2 w-48 rounded-lg border border-white/10 bg-dark opacity-0 shadow-xl transition-all"
              data-dropdown-menu
            >
              {moreLinks.map((link) => (
                <a
                  href={link.path}
                  class="block px-4 py-3 font-sans text-sm text-gray-200 transition-colors hover:bg-lime/10 hover:text-lime first:rounded-t-lg last:rounded-b-lg"
                >
                  {link.name}
                </a>
              ))}
            </div>
          </div>
        </nav>

        <!-- CTA Button -->
        <a href="/vss">
          <button class="inline-flex h-9 items-center justify-center rounded-lg bg-lime px-4 font-display text-sm font-bold text-dark shadow-lg shadow-lime/20 transition-all hover:bg-lime/90 focus:outline-none focus:ring-2 focus:ring-lime focus:ring-offset-2">
            Quero Escalar Vendas
          </button>
        </a>
      </div>
      
      <!-- Mobile Menu Component -->
      <MobileMenu navLinks={allNavLinks} />
    </div>
  </Container>
</header>

<script>
  // Scroll effect - Header transparente no topo, escuro ao rolar
  function initHeaderScroll() {
    const header = document.getElementById('main-header')
    if (!header) return
    
    const isTransparent = header.dataset.transparent === 'true'
    
    function handleScroll() {
      if (window.scrollY > 50) {
        header.classList.add('bg-dark/98', 'py-3', 'shadow-xl', 'shadow-black/20', 'backdrop-blur-lg')
        header.classList.remove('bg-transparent', 'py-5')
      } else {
        if (isTransparent) {
          header.classList.remove('bg-dark/98', 'py-3', 'shadow-xl', 'shadow-black/20', 'backdrop-blur-lg')
          header.classList.add('bg-transparent', 'py-5')
        }
        // Se não é transparente, mantém o fundo escuro mesmo no topo
      }
    }

    // Executar na carga
    handleScroll()
    
    // Escutar scroll
    window.addEventListener('scroll', handleScroll, { passive: true })
  }

  // Inicializar
  initHeaderScroll()
  
  // Re-inicializar após navegação (View Transitions)
  document.addEventListener('astro:page-load', initHeaderScroll)

  // Dropdown menu functionality
  function initDropdown() {
    const dropdown = document.querySelector('[data-dropdown]')
    const trigger = document.querySelector('[data-dropdown-trigger]')
    const menu = document.querySelector('[data-dropdown-menu]')
    const icon = document.querySelector('[data-dropdown-icon]')

    if (!dropdown || !trigger || !menu || !icon) return

    let isOpen = false

    function openMenu() {
      isOpen = true
      menu.classList.remove('invisible', 'opacity-0')
      menu.classList.add('visible', 'opacity-100')
      icon.style.transform = 'rotate(180deg)'
    }

    function closeMenu() {
      isOpen = false
      menu.classList.add('invisible', 'opacity-0')
      menu.classList.remove('visible', 'opacity-100')
      icon.style.transform = 'rotate(0deg)'
    }

    function toggleMenu(e: Event) {
      e.preventDefault()
      e.stopPropagation()
      isOpen ? closeMenu() : openMenu()
    }

    // Click no trigger
    trigger.addEventListener('click', toggleMenu)

    // Hover events
    dropdown.addEventListener('mouseenter', openMenu)
    dropdown.addEventListener('mouseleave', closeMenu)

    // Fechar ao clicar fora
    document.addEventListener('click', (e) => {
      if (isOpen && !dropdown.contains(e.target as Node)) {
        closeMenu()
      }
    })
  }

  initDropdown()
  document.addEventListener('astro:page-load', initDropdown)
</script>
