{
  "name": "joelburigo-site",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "build:search": "astro check && astro build && npx pagefind --site dist",
    "preview": "wrangler pages dev ./dist",
    "deploy": "npm run build && wrangler pages deploy ./dist",
    "types": "wrangler types",
    "astro": "astro",
    "format": "prettier --write .",
    "optimize:images": "node scripts/optimize-images.mjs",
    "analyze": "node scripts/analyze-performance.js",
    "lighthouse": "lighthouse http://localhost:4321 --view",
    "lighthouse:prod": "lighthouse https://joelburigo.com.br --view"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/tailwind": "^6.0.2",
    "@iconify-json/lucide": "^1.2.80",
    "astro": "^5.16.5",
    "astro-icon": "^1.1.5",
    "clsx": "^2.1.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.19"
  },
  "devDependencies": {
    "pagefind": "^1.4.0",
    "path-to-regexp": "^8.3.0",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3",
    "wrangler": "^4.54.0"
  },
  "overrides": {
    "path-to-regexp": "^8.3.0"
  }
