---
import Container from '../ui/Container.astro'
import Button from '../ui/Button.astro'
import { Target, Users, Package, Layout, FileText, UserCheck } from 'lucide-react'

const ps = [
  {
    id: 'P1',
    name: 'Posicionamento',
    desc: 'Como você se diferencia no mercado',
    icon: Target,
    color: 'lime',
  },
  {
    id: 'P2',
    name: 'Público',
    desc: 'Quem é seu cliente ideal',
    icon: Users,
    color: 'royal-blue',
  },
  {
    id: 'P3',
    name: 'Produto',
    desc: 'Sua oferta irresistível',
    icon: Package,
    color: 'lime',
  },
  {
    id: 'P4',
    name: 'Programas',
    desc: 'CRM, funis e automações',
    icon: Layout,
    color: 'royal-blue',
  },
  {
    id: 'P5',
    name: 'Processos',
    desc: 'Documentado e escalável',
    icon: FileText,
    color: 'lime',
  },
  {
    id: 'P6',
    name: 'Pessoas',
    desc: 'Time que executa com excelência',
    icon: UserCheck,
    color: 'royal-blue',
  },
]

// Calculate positions for orbital layout
const calculatePosition = (index: number, total: number) => {
  const angle = index * (360 / total) * (Math.PI / 180)
  const radius = 160
  const x = Math.cos(angle) * radius
  const y = Math.sin(angle) * radius
  return { x, y }
}
---

<section class="relative overflow-hidden bg-dark py-24">
  <!-- Background decoration -->
  <div class="absolute left-0 top-0 h-96 w-96 rounded-full bg-royal-blue/5 blur-3xl"></div>
  <div class="absolute bottom-0 right-0 h-96 w-96 rounded-full bg-lime/5 blur-3xl"></div>

  <Container class="relative z-10">
    <div class="grid grid-cols-1 items-center gap-16 lg:grid-cols-2">
      <!-- Left: Content -->
      <div>
        <h2 class="mb-6 font-display text-display-sm text-white md:text-display-md">
          O Framework dos <span class="text-lime">6Ps</span> das Vendas Escaláveis
        </h2>
        <p class="mb-8 font-sans text-body-lg text-gray-300">
          Metodologia proprietária validada por centenas de empresas para estruturar vendas do
          zero ao crescimento.
        </p>

        <div class="mb-10 grid grid-cols-1 gap-6 sm:grid-cols-2">
          {ps.map((p, i) => {
            const Icon = p.icon
            const delay = i * 0.1
            return (
              <div 
                class="framework-card flex items-start gap-4 rounded-xl border border-white/10 bg-white/5 p-4 transition-colors hover:bg-white/10"
                style={`animation-delay: ${delay}s`}
              >
                <div
                  class={`h-10 w-10 rounded-full ${p.color === 'lime' ? 'bg-lime text-dark' : 'bg-royal-blue text-white'} flex shrink-0 items-center justify-center font-bold`}
                >
                  {p.id}
                </div>
                <div>
                  <h3 class="font-display text-h4 font-bold text-white">{p.name}</h3>
                  <p class="font-sans text-body-sm text-gray-400">{p.desc}</p>
                </div>
              </div>
            )
          })}
        </div>

        <div class="cta-card relative overflow-hidden rounded-2xl bg-lime p-8 text-dark shadow-2xl">
          <div class="absolute right-0 top-0 h-32 w-32 -translate-y-1/2 translate-x-1/2 rounded-full bg-white opacity-20 blur-3xl"></div>
          <h3 class="relative z-10 mb-2 font-display text-h3 font-bold">
            Descubra Qual P Está Travando Seu Crescimento
          </h3>
          <p class="relative z-10 mb-6 font-sans text-body-sm font-medium text-dark/80">
            Faça o diagnóstico gratuito dos 6Ps e descubra onde sua empresa precisa melhorar
          </p>
          <a href="/diagnostico" class="relative z-10">
            <Button variant="white" class="w-full shadow-lg sm:w-auto">
              Fazer Diagnóstico Gratuito dos 6Ps
            </Button>
          </a>
        </div>
      </div>

      <!-- Right: Visual Diagram -->
      <div class="diagram-container relative flex min-h-[400px] items-center justify-center">
        <!-- Central Core -->
        <div class="central-core absolute z-20 flex h-32 w-32 items-center justify-center rounded-full bg-lime shadow-2xl shadow-lime/50">
          <span class="text-center text-xl font-bold leading-tight text-dark">
            Vendas<br />Escaláveis
          </span>
        </div>

        <!-- Orbiting Ps -->
        {ps.map((p, i) => {
          const Icon = p.icon
          const position = calculatePosition(i, ps.length)
          const delay = 0.2 + i * 0.1
          return (
            <div 
              class={`orbital-p absolute h-24 w-24 ${p.color === 'lime' ? 'border-lime bg-lime' : 'border-royal-blue bg-royal-blue'} group z-10 flex cursor-pointer flex-col items-center justify-center rounded-full border-2 shadow-xl transition-all duration-300 hover:scale-110`}
              style={`left: calc(50% + ${position.x}px - 3rem); top: calc(50% + ${position.y}px - 3rem); animation-delay: ${delay}s`}
            >
              <div class={`${p.color === 'lime' ? 'text-dark' : 'text-white'} mb-1 transition-transform group-hover:scale-110`}>
                <Icon size={20} />
              </div>
              <span class={`text-xs font-bold ${p.color === 'lime' ? 'text-dark' : 'text-white'}`}>
                {p.name}
              </span>
              <span class={`absolute -right-2 -top-2 h-6 w-6 ${p.color === 'lime' ? 'bg-dark text-lime' : 'bg-lime text-dark'} flex items-center justify-center rounded-full border-2 text-xs font-bold ${p.color === 'lime' ? 'border-lime' : 'border-dark'}`}>
                {p.id}
              </span>
            </div>
          )
        })}

        <!-- Connecting Circle (SVG) -->
        <svg
          class="pointer-events-none absolute inset-0 z-0 h-full w-full opacity-20"
          viewBox="-200 -200 400 400"
        >
          <circle
            cx="0"
            cy="0"
            r="160"
            fill="none"
            stroke="#a3ff3f"
            stroke-width="2"
            stroke-dasharray="8 8"
          />
        </svg>
      </div>
    </div>
  </Container>
</section>

<style>
  .framework-card {
    opacity: 0;
    animation: fadeInLeft 0.6s ease-out forwards;
  }

  .cta-card {
    opacity: 0;
    animation: fadeInScale 0.6s ease-out 0.6s forwards;
  }

  .central-core {
    opacity: 0;
    animation: fadeInScale 0.6s ease-out 0.2s forwards;
  }

  .orbital-p {
    opacity: 0;
    animation: orbitalAppear 0.6s ease-out forwards;
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes orbitalAppear {
    from {
      opacity: 0;
      transform: scale(0);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
</style>
