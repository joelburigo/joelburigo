---
import Layout from '../layouts/Layout.astro'
import Header from '../components/layout/Header.astro'
import Footer from '../components/layout/Footer.astro'
import HeroSection from '../components/home/HeroSection.astro'
import QuemSouSection from '../components/home/QuemSouSection.astro'
import ProblemSection from '../components/home/ProblemSection.astro'
import FrameworkSection from '../components/home/FrameworkSection.astro'
import ProofSocialSection from '../components/home/ProofSocialSection.astro'
import PathwaysSection from '../components/home/PathwaysSection.astro'
import BlogPostsSection from '../components/home/BlogPostsSection.astro'
import FinalCTASection from '../components/home/FinalCTASection.astro'

const siteUrl = 'https://joelburigo.com.br'

const seo = {
  title: 'Joel Burigo - Vendas Escaláveis para MPEs',
  description:
    'Estruture vendas previsíveis em 90 dias. Framework 6Ps testado em 140+ empresas. DIY, DWY ou Mentoria 1:1.',
  keywords:
    'vendas escaláveis, vendas B2B, CRM, consultoria vendas, framework 6Ps, Joel Burigo, vendas sem segredos, implementation services, strategic advisory',
}

// Structured Data - Home Page
const homeSchema = {
  '@context': 'https://schema.org',
  '@graph': [
    {
      '@type': 'Organization',
      '@id': `${siteUrl}/#organization`,
      name: 'Joel Burigo',
      url: siteUrl,
      logo: {
        '@type': 'ImageObject',
        url: `${siteUrl}/images/joel-burigo-logo.webp`,
      },
      founder: {
        '@type': 'Person',
        name: 'Joel Burigo',
      },
      sameAs: [
        'https://www.youtube.com/@joelburigo',
        'https://www.linkedin.com/in/joelburigo/',
        'https://www.instagram.com/joelburigo/',
      ],
    },
    {
      '@type': 'WebSite',
      '@id': `${siteUrl}/#website`,
      url: siteUrl,
      name: 'Joel Burigo - Vendas Escaláveis',
      publisher: { '@id': `${siteUrl}/#organization` },
      inLanguage: 'pt-BR',
    },
    {
      '@type': 'WebPage',
      '@id': `${siteUrl}/#webpage`,
      url: siteUrl,
      name: seo.title,
      description: seo.description,
      isPartOf: { '@id': `${siteUrl}/#website` },
      about: { '@id': `${siteUrl}/#organization` },
      inLanguage: 'pt-BR',
    },
  ],
}
---

<Layout title={seo.title} description={seo.description} keywords={seo.keywords}>
  <script is:inline type="application/ld+json" set:html={JSON.stringify(homeSchema)} />
  <div class="flex min-h-screen flex-col">
    <Header />
    <main class="flex-grow">
      <HeroSection />
      <QuemSouSection />
      <ProblemSection />
      <FrameworkSection />
      <ProofSocialSection />
      <PathwaysSection />
      <BlogPostsSection />
      <FinalCTASection />
    </main>
    <Footer />
  </div>
</Layout>
